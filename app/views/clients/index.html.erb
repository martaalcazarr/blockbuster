<p class="text-success"><%= notice %></p>

<div class="container">
  <h1 class="text-info">Clients</h1>

  <%= link_to "New client", new_client_path, class: "btn btn-info mb-2" %>

  <div id="clients ">
    <table class="table table-bordered ">
      <thead class="bg-info">
        <tr class="bg-info">
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <%= render client %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
